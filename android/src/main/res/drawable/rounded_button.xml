

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Pressed state -->
<item android:state_pressed="true">
  <shape>
    <corners android:radius="25dp" /> <!-- Set the radius for rounded corners -->
    <solid android:color="#90808080" /> <!-- Set the semi-transparent gray background color -->
  </shape>
</item>
<!-- Default state -->
<item>
  <shape>
    <corners android:radius="25dp" /> <!-- Set the radius for rounded corners -->
    <solid android:color="#70808080" /> <!-- Set the semi-transparent gray background color -->
  </shape>

</item>
</selector>
